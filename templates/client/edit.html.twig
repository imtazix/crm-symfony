{% extends 'base.html.twig' %}

{% block title %}Modifier un client{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-warning mb-4"><i class="fas fa-edit"></i> Modifier le client</h2>

    <form method="post">
        <div class="mb-3">
            <label for="nomGerant" class="form-label">Gérant</label>
            <input type="text" class="form-control" id="nomGerant" name="nomGerant" value="{{ client.nomGerant }}" required>
        </div>
        <div class="mb-3">
            <label for="raisonSociale" class="form-label">Raison Sociale</label>
            <input type="text" class="form-control" id="raisonSociale" name="raisonSociale" value="{{ client.raisonSociale }}" required>
        </div>
        <div class="mb-3">
            <label for="telephone" class="form-label">Téléphone</label>
            <input type="text" class="form-control" id="telephone" name="telephone" value="{{ client.telephone }}" required>
        </div>
        <div class="mb-3">
            <label for="adresse" class="form-label">Adresse</label>
            <input type="text" class="form-control" id="adresse" name="adresse" value="{{ client.adresse }}" required>
        </div>
        <div class="mb-3">
            <label for="ville" class="form-label">Ville</label>
            <input type="text" class="form-control" id="ville" name="ville" value="{{ client.ville }}" required>
        </div>
        <div class="mb-3">
            <label for="pays" class="form-label">Pays</label>
            <input type="text" class="form-control" id="pays" name="pays" value="{{ client.pays }}" required>
        </div>

        <button type="submit" class="btn btn-warning">Modifier</button>
        <a href="{{ path('client_index') }}" class="btn btn-secondary">Retour</a>
    </form>
</div>
{% endblock %}
