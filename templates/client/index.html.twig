{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-users"></i> Liste des Clients
        </h2>
        <a href="{{ path('client_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Ajouter un client
        </a>
    </div>

    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th><i class="fas fa-user-tie"></i> Gérant</th>
                <th><i class="fas fa-building"></i> Raison Sociale</th>
                <th><i class="fas fa-phone"></i> Téléphone</th>
                <th><i class="fas fa-map-marker-alt"></i> Adresse</th>
                <th><i class="fas fa-city"></i> Ville</th>
                <th><i class="fas fa-globe"></i> Pays</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ client.nomGerant }}</td>
                    <td>{{ client.raisonSociale }}</td>
                    <td>{{ client.telephone }}</td>
                    <td>{{ client.adresse }}</td>
                    <td>{{ client.ville }}</td>
                    <td>{{ client.pays }}</td>
                    <td>
                        <a href="{{ path('client_factures', { id: client.id }) }}" class="btn btn-sm btn-primary" title="Factures">
                            <i class="fas fa-file-invoice"></i>
                        </a>
                        <a href="{{ path('client_edit', { id: client.id }) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('client_delete', { id: client.id }) }}" class="btn btn-sm btn-danger"
                           onclick="return confirm('Confirmer la suppression de ce client ?');" title="Supprimer">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center text-muted">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
